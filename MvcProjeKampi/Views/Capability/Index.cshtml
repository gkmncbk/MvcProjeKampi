
@using EntityLayer.Concrete
@model List<Capability>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    //Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--Custom Theme files-->
    <link href="~/AdminLTE-3.0.4/Skills_Theme/web/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!--//Custom Theme files -->
    <!--web font-->
    <link href='//fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
    <!--//web font-->
    <!--circle-chart-->
    <script src="~/AdminLTE-3.0.4/Skills_Theme/web/js/jquery-1.11.1.min.js"></script>
    <!--//circle-chart-->
    <!--ResponsiveTabs-->
    <script src="~/AdminLTE-3.0.4/Skills_Theme/web/js/easyResponsiveTabs.js" type="text/javascript"></script>





    <script type="text/javascript">
        $(document).ready(function () {
            $('#horizontalTab').easyResponsiveTabs({
                type: 'default', //Types: default, vertical, accordion
                width: 'auto', //auto or any width like 600px
                fit: true   // 100% fit in a container
            });
        });
    </script>
    <style>
        .main {
            font-family: 'Open Sans', sans-serif !important;
            background: url('/AdminLTE-3.0.4/Skills_Theme/web//images/5.jpg') no-repeat center center fixed;
            background-size: cover;
            height: 100%;
        }
    </style>
    <!--//ResponsiveTabs-->
</head>
<body>
    <!-- main -->
    <div class="main">
        <div class="main-info w3l">
            <div class="main-row">
                <!-- main-row-one -->
                <div class="profile-grid logo wthree">
                    <img src="/AdminLTE-3.0.4/dist/img/user2-160x160.jpg" alt="">
                    <h1>Gökmen ÇABUK </h1>
                    <h2>GitHub : gkmncbk</h2>
                    @*<h2><a class="btn btn-warning" href="https://github.com/gkmncbk" target="_blank">GitHub : gkmncbk</a></h2>*@
                </div>
                <hr />
                <div class="text-center" style="color:white">
                    <h2>Çevre Mühendisi</h2>
                    <h2>Web Tasarım ve Kodlama Bölümü</h2>
                    <h2>Polis Memuru</h2>
                </div>
                <hr />
                <h3 class="title">Yetenekler</h3>
                <div class="col-md-6 skills-right bar_group">

                    @foreach (var item in Model)
                    {
                        var labelText = item.CapabilityName + " " + item.CapabilityLevel + "%";
                        <div class='bar_group__bar thin' label=@labelText value=@item.CapabilityLevel></div>

                    }
                </div>
                <!--bar-js-->
                <script src="~/AdminLTE-3.0.4/Skills_Theme/web/js/bars.js"></script>

                <div class="clear"> </div>
            </div>
        </div>
        <!-- copyright -->
        <!-- //copyright -->
    </div>
    <!-- main -->
</body>
</html>
