

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>MVC Proje Kampı</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-20/css/style.css">
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>


<body class="img js-fullheight" style="background-image: url(/AdminLTE-3.0.4/login-form-20/images/bg.jpg);">

    <div class="modal" tabindex="-1" role="dialog" id="myModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger">GİRİŞ BAŞARISIZ</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>
                        @ViewBag.loginHata1
                        <br />
                        @ViewBag.loginHata2
                    </p>
                </div>
                <div class="modal-footer">
                   
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>



    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">MVC Proje Kampı Yazar Girişi</h2>

                    @*@if (!string.IsNullOrEmpty(ViewBag.loginHata1) || !string.IsNullOrEmpty(ViewBag.loginHata2))
                    {
                        <br />
                        <span class="alert alert-danger" role="alert">
                            @ViewBag.loginHata1
                            <br />
                            @ViewBag.loginHata2

                        </span>
                    }*@

                </div>
            </div>


            <div class="row justify-content-center">

                <div class="col-md-6 col-lg-4">

                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Bir Hesabın Var mı?</h3>
                        @using (Html.BeginForm("WriterLogin", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                <input name="WriterMail" type="text" class="form-control" placeholder="Mail Adresin" required>
                            </div>
                            <div class="form-group">
                                <input name="WriterPassword" id="password-field" type="password" class="form-control" placeholder="*****" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>

                            <div class="form-group">
                                <div class="g-recaptcha" style="margin-left: 20px;" data-sitekey="6LcbnlsbAAAAABOSdfnR58CuTN6y6pAVzFw-faw2"></div>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">GİRİŞ YAP</button>
                            </div>
                            @*<div class="text-center text-danger">
                                    @Html.ValidationMessage("")




                                </div>*@


                            @*if (!string.IsNullOrEmpty(ViewBag.loginHata2))
                                {
                                    <span class="badge badge-danger">@ViewBag.loginHata2</span>
                                }*@


                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Beni Hatırla
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#" style="color: #fff">Şifremi Unuttum</a>
                                </div>
                            </div>
                        }
                        <p class="w-100 text-center">&mdash; Veya Sosyal Medya ile Giriş Yapın &mdash;</p>
                        <div class="social d-flex text-center">
                            <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
                            <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/AdminLTE-3.0.4/login-form-20/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/main.js"></script>
    @if (!string.IsNullOrEmpty(ViewBag.loginHata1) || !string.IsNullOrEmpty(ViewBag.loginHata2))
    {
        <script type="text/javascript">
            $(window).on('load', function () {
                $('#myModal').modal('show');
            });
        </script>
    }

</body>
</html>



