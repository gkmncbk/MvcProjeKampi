@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "EditAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Admin Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("EditAdmin", "Authorization", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.AdminID, new { @class = "form-control" })
    @Html.HiddenFor(x => x.AdminStatus, new { @class = "form-control" })
    @Html.Label("Admin Kullanıcı Adı")
    @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })

    <br />
    @Html.Label("Şifre")
    @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })
    <br />
    <br />

    @Html.Label("Rol")
    @Html.DropDownListFor(c => c.RoleID, (List<SelectListItem>)ViewBag.valueAdminRole, new { @class = "form-control" })
    <br />

    <button class="btn btn-success">Güncelle</button>
</div>
}

